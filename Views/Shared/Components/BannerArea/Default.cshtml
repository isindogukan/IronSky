@using Entities
@model List<Banner>
<div class="banner-group">
    <div class="container">
        <div class="row">
            @if (Model.Any(x => x.Type == "12-5"))
            {
                var firstbanner = Model.First(x => x.Type == "12-5");

        <div class="col-md-12 col-lg-5">
            <div class="banner banner-large banner-overlay banner-overlay-light">
                <a href="#">
                    <img src="/images/demos/demo-2/banners/@firstbanner.Image" alt="Banner">
                </a>

                <div class="banner-content banner-content-top">
                    <h4 class="banner-subtitle">@firstbanner.Name</h4><!-- End .banner-subtitle -->
                    <h3 class="banner-title">@firstbanner.Description</h3><!-- End .banner-title -->
                    <div class="banner-text">@firstbanner.Price</div><!-- End .banner-text -->
                    <a href="#" class="btn btn-outline-gray banner-link">Shop Now<i class="icon-long-arrow-right"></i></a>
                </div><!-- End .banner-content -->
            </div><!-- End .banner -->
        </div><!-- End .col-lg-5 -->            }

            @if (Model.Any(x => x.Type == "6-3"))
            {
                var secondbanner = Model.First(x => x.Type == "6-3");

        <div class="col-md-6 col-lg-3">
            <div class="banner banner-overlay">
                <a href="#">
                    <img src="/images/demos/demo-2/banners/@secondbanner.Image" alt="Banner">
                </a>

                <div class="banner-content banner-content-bottom">
                    <h4 class="banner-subtitle text-grey">@secondbanner.Name</h4>

                    <h3 class="banner-title text-white">@secondbanner.Description</h3>
                    <div class="banner-text text-white">@secondbanner.Price</div>
                    <a href="#" class="btn btn-outline-white banner-link">Discover Now<i class="icon-long-arrow-right"></i></a>
                </div>

            </div>
        </div>
        }
            @if (Model.Any(x => x.Type == "6-4"))
            {
                var thirthybanner = Model.First(x => x.Type == "6-4");
        <div class="col-md-6 col-lg-4">
            <div class="banner banner-overlay">
                <a href="#">
                    <img src="/images/demos/demo-2/banners/@thirthybanner.Image" alt="Banner">
                </a>

                <div class="banner-content banner-content-top">
                    <h4 class="banner-subtitle text-grey">@thirthybanner.Name</h4>

                    <h3 class="banner-title text-white">@thirthybanner.Description</h3>
                    <a href="#" class="btn btn-outline-white banner-link">Discover Now<i class="icon-long-arrow-right"></i></a>
                </div>

            </div>
            <div class="banner banner-overlay banner-overlay-light">
                <a href="#">
                    <img src="/images/demos/demo-2/banners/banner-4.jpg" alt="Banner">
                </a>

                <div class="banner-content banner-content-top">
                    <h4 class="banner-subtitle">On Sale</h4>

                    <h3 class="banner-title">Lamps Offer</h3>
                    <div class="banner-text">up to 30% off</div>
                    <a href="#" class="btn btn-outline-gray banner-link">Shop Now<i class="icon-long-arrow-right"></i></a>
                </div>

            </div>
        </div>}



        </div><!-- End .row -->
    </div><!-- End .container -->
</div><!-- End .banner-group -->
