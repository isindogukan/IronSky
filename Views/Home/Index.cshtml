     <script>
        function AddBasket(quantity, productId) {
            $.post("/basket", { quantityData: quantity, productIdData: productId }, function (data, status) {

                $("#basketDetail").html(data);
            });
            $.post("/get-basket-product",{quantityData:quantity,productIdData:productId},function(data,status){

            $("#basket-product").html(data);

            });
        }
       
        $(document).ready(function () {

            $.post("/get-basket", {}, function (data, status) {

                $("#basketDetail").html(data);
            });
        });
    </script>

